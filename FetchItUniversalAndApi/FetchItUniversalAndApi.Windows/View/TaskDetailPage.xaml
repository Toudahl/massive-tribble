<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:local="using:FetchItUniversalAndApi.View"
			xmlns:common="using:FetchItUniversalAndApi.Common"
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			xmlns:ViewModel="using:FetchItUniversalAndApi.ViewModel"
			x:Name="pageRoot"
			x:Class="FetchItUniversalAndApi.View.TaskDetailPage"
			DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
			mc:Ignorable="d">

	<Page.Resources>
		<!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
		<x:String x:Key="AppName">My Application</x:String>
	</Page.Resources>

	<!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Grid.DataContext>
			<ViewModel:TaskDetailViewModel />
		</Grid.DataContext>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="50" />
			<ColumnDefinition Width="100*" />
			<ColumnDefinition Width="100*" />
			<ColumnDefinition Width="50" />
		</Grid.ColumnDefinitions>
		<Grid.ChildrenTransitions>
			<TransitionCollection>
				<EntranceThemeTransition />
			</TransitionCollection>
		</Grid.ChildrenTransitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="100*" />
			<RowDefinition Height="100*" />
			<RowDefinition Height="50" />
		</Grid.RowDefinitions>

		<!-- Back button and page title -->
		<Grid Grid.ColumnSpan="4">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="120" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
		</Grid>
		<TextBlock x:Name="taskTitleBlock"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="107,95,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 Text="Task Title:"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="taskMasterBlock"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="110,143,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 Text="Taskmaster:"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="fetcherBlock"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="111,172,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 Text="Fetcher:"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="taskDescriptionBlock"
							 Grid.Column="2"
							 HorizontalAlignment="Left"
							 Margin="39,62,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 Text="Task Description:"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="taskStatusBlock"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="101,50,0,0"
							 Grid.Row="2"
							 TextWrapping="Wrap"
							 Text="Task Status:"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="taskStatusBind"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="206,50,0,0"
							 Grid.Row="2"
							 TextWrapping="Wrap"
							 Text="{Binding TaskStatus}"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="taskDescriptionBind"
							 Grid.Column="2"
							 HorizontalAlignment="Left"
							 Margin="237,62,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 Text="{Binding SelectedTask.TaskDescription}"
							 VerticalAlignment="Top"
							 FontSize="20"
							 Width="296"
							 Height="134" />
		<TextBlock x:Name="taskFetcherBind"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="186,172,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 Text="{Binding Fetcher.ProfileName}"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="taskmasterBind"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="217,143,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 Text="{Binding Taskmaster.ProfileName}"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="taskTitleBind"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="196,95,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 Text="title"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="deadlineBlock"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="102,191,0,0"
							 Grid.Row="2"
							 TextWrapping="Wrap"
							 Text="Deadline:"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="postedDateBlock"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="99,125,0,0"
							 Grid.Row="2"
							 TextWrapping="Wrap"
							 Text="Posted Date:"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="postedDateBind"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="215,125,0,0"
							 Grid.Row="2"
							 TextWrapping="Wrap"
							 Text="{Binding SelectedTask.TaskTimeCreated}"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="deadlineBind"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="191,191,0,0"
							 Grid.Row="2"
							 TextWrapping="Wrap"
							 Text="{Binding SelectedTask.TaskDeadline}"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="taskFeeBlock"
							 Grid.Column="2"
							 HorizontalAlignment="Left"
							 Margin="81,246,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 Text="Task Fee:"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="taskFeeBind"
							 Grid.Column="2"
							 HorizontalAlignment="Left"
							 Margin="168,246,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 Text="{Binding SelectedTask.TaskFee}"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="endAddressBlock"
							 Grid.Column="2"
							 HorizontalAlignment="Left"
							 Margin="72,56,0,0"
							 Grid.Row="2"
							 TextWrapping="Wrap"
							 Text="End Address:"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="endAddressBind"
							 Grid.Column="2"
							 HorizontalAlignment="Left"
							 Margin="203,56,0,0"
							 Grid.Row="2"
							 TextWrapping="Wrap"
							 Text="{Binding SelectedTask.TaskEndPointAddress}"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="itemPriceBlock"
							 Grid.Column="2"
							 HorizontalAlignment="Left"
							 Margin="78,275,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 Text="Task Item Price:"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="itemPriceBind"
							 Grid.Column="2"
							 HorizontalAlignment="Left"
							 Margin="218,275,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 Text="{Binding SelectedTask.TaskItemPrice}"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<Button x:Name="goBackButton"
						Content="Go back"
						Grid.Column="1"
						HorizontalAlignment="Left"
						Margin="44,257,0,0"
						Grid.Row="2"
						VerticalAlignment="Top"
						Height="54"
						Width="160"
						Click="goBackButton_Click" />
		<Button x:Name="CreateFeedbackButton"
						Content="Create Feedback"
						Grid.Column="1"
						HorizontalAlignment="Left"
						Margin="214,257,0,0"
						Grid.Row="2"
						VerticalAlignment="Top"
						RenderTransformOrigin="0.397,0.58"
						Height="54"
						Width="156"
						Visibility="Collapsed"
						Click="CreateFeedbackButton_Click" />
		<Button x:Name="EditTaskButton"
						Content="Edit Task"
						Grid.Column="1"
						HorizontalAlignment="Left"
						Margin="214,257,0,0"
						Grid.Row="2"
						VerticalAlignment="Top"
						RenderTransformOrigin="0.397,0.58"
						Height="54"
						Width="156"
						Visibility="Collapsed"
						Click="EditTaskButton_Click" />
		<Button x:Name="AssignToTaskButton"
						Content="Assign To Task"
						Grid.Column="2"
						HorizontalAlignment="Left"
						Margin="397,229,0,0"
						Grid.Row="1"
						VerticalAlignment="Top"
						Height="52"
						Width="167"
						FontSize="20"
						Visibility="Collapsed"
						Command="{Binding AssignToTaskCommand}"
						/>
		<Button x:Name="ResignFromTaskButton"
						Content="Resign From Task"
						Grid.Column="2"
						HorizontalAlignment="Left"
						Margin="397,229,0,0"
						Grid.Row="1"
						VerticalAlignment="Top"
						Height="52"
						Width="200"
						FontSize="20"
						Visibility="Collapsed"
						Command="{Binding ResignFromTaskCommand}"
						/>
	</Grid>
</Page>
