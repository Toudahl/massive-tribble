<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:local="using:FetchItUniversalAndApi.View"
			xmlns:common="using:FetchItUniversalAndApi.Common"
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			xmlns:ViewModel="using:FetchItUniversalAndApi.ViewModel"
			x:Name="pageRoot"
			x:Class="FetchItUniversalAndApi.View.ProfileDetailPage"
			
			mc:Ignorable="d">

    <Page.DataContext>
        <ViewModel:ProfileDetailViewModel />
    </Page.DataContext>

    <Grid Background="{StaticResource FetchitBackgroundColour}">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>

        <!-- Top Grid -->
        <Grid Background="#FF0099CC">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="548"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>

            <!-- Back Button -->
            <Button x:Name="menuButton" 
                    Margin="39,59,0,0"
                    Style="{StaticResource NavigationBackButtonNormalStyle}" 
                    RenderTransformOrigin="0.5,0.5" 
                    Height="41" 
                    Width="41">

                <Button.RenderTransform>
                    <CompositeTransform Rotation="180"/>
                </Button.RenderTransform>
            </Button>

            <TextBlock Text="Menu"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="46,0,46,20" Height="13" Width="28"/>
            <!-- Enter a convinient title for the view  -->
            <TextBlock x:Name="pageTitle" 
                        Text="{Binding WelcomeText}"
                        Style="{StaticResource HeaderTextBlockStyle}" 
                        Grid.Column="1" 
                        IsHitTestVisible="false" 
                        TextWrapping="NoWrap" 
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,40" Height="40"/>

            <TextBlock Text="FetchIt!" 
                       Grid.Column="2" 
                       FontSize="140"
                       TextWrapping="Wrap" 
                       VerticalAlignment="center" 
                       FontFamily="Remachine Script Personal Use " 
                       Foreground="#FFCCFFCC" Height="149" 
                       Margin="83,-7,294,-2"
                       Width="321"/>
        </Grid>

        <Grid Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Left"
							 Margin="30,30,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 Text="Name"
							 VerticalAlignment="Top"
							 RenderTransformOrigin="0.628,-0.058" />
            <TextBlock HorizontalAlignment="Left"
							 Margin="30,60,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 Text="{Binding selectedprofileName}"
							 VerticalAlignment="Top"
							 FontSize="20" />
            <TextBlock Grid.Column="1" Margin="30,30,0,0"
                       TextWrapping="Wrap"
                       Text="{Binding selectedProfileRating}"
                       VerticalAlignment="Top"
                       FontSize="24" 
                       HorizontalAlignment="Left"/>
        </Grid>
        <Grid Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Left"
							 Margin="30,30,0,0"
							 Grid.Row="2"
							 TextWrapping="Wrap"
							 Text="Email"
							 VerticalAlignment="Top"
							 RenderTransformOrigin="0.628,-0.058" />
            <TextBlock HorizontalAlignment="Left"
							 Margin="30,60,0,0"
							 Grid.Row="2"
							 TextWrapping="Wrap"
							 Text="{Binding selectedprofileEmail}"
							 VerticalAlignment="Top"
							 FontSize="22"
							 RenderTransformOrigin="0.906,2.8" />
            <TextBlock Grid.Column="1"
						HorizontalAlignment="Left"
						Margin="30,30,0,0"
						Grid.Row="1"
						TextWrapping="Wrap"
						Text="Is this profile Verified"
						FontSize="20"
						VerticalAlignment="Top" />
            <TextBlock Grid.Column="1" HorizontalAlignment="Left"
							 Margin="230,30,0,0"
							 TextWrapping="Wrap"
							 Text="{Binding IsProfileVerified}"
							 VerticalAlignment="Top"
							 FontSize="20"
							 FontWeight="Bold"
							 
							 Grid.Row="1" />
        </Grid>
        <Grid Row="3">
            <TextBlock HorizontalAlignment="Left"
							 Margin="30,30,0,0"
							 Grid.Row="3"
							 TextWrapping="Wrap"
							 Text="Address"
							 VerticalAlignment="Top"
							 RenderTransformOrigin="0.628,-0.058" />
            <TextBlock HorizontalAlignment="Left"
							 Margin="30,60,0,0"
							 Grid.Row="3"
							 TextWrapping="Wrap"
							 Text="{Binding selectedprofileAddress}"
							 VerticalAlignment="Top"
							 FontSize="22"
							 RenderTransformOrigin="0.906,2.8" />
        </Grid>
        <Grid Row="4">
            <TextBlock HorizontalAlignment="Left"
							 Margin="30,30,0,0"
							 Grid.Row="4"
							 TextWrapping="Wrap"
							 Text="Mobile"
							 VerticalAlignment="Top"
							 RenderTransformOrigin="0.628,-0.058" />
            <TextBlock HorizontalAlignment="Left"
							 Margin="30,60,0,0"
							 Grid.Row="4"
							 TextWrapping="Wrap"
							 Text="{Binding selectedprofileMobile}"
							 VerticalAlignment="Top"
							 FontSize="22"
							 RenderTransformOrigin="0.906,2.8" />
            <Button x:Name="reportProfileButton" Content="Report this profile!" HorizontalAlignment="Left" Margin="425,35,0,0" VerticalAlignment="Top" Click="reportProfileButton_Click" BorderThickness="0" Background="#FFFB4A07"/>
        </Grid>
        <!--Appbar-->
        <AppBar x:Name="appBar" 
                    Grid.ColumnSpan="2"
                    Grid.RowSpan="2"
                    Background="NavajoWhite"
                    Opacity="20" 
                    BorderBrush="#FFFB4A07">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="4"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Menu"
                                   FontSize="50"
                                   Margin="15,0,130,0"
                                   VerticalAlignment="Center" 
                                   FontFamily="Remachine Script Personal Use " 
                                   Foreground="#FFFB4A07" 
                                   FontWeight="Bold"/>
                </StackPanel>
                <Grid Grid.Row="1">
                    <StackPanel Orientation="Vertical">
                        <Button x:Name="profileButton" Click="profileButton_Click" BorderThickness="0" FontSize="24">My Profile</Button>
                        <Button x:Name="messageHubButton" Click="messageHubButton_Click" BorderThickness="0" FontSize="24">Message Hub</Button>
                        <Button x:Name="issuesButton" Click="issuesButton_Click" BorderThickness="0" FontSize="24">My Issues</Button>
                        <Button x:Name="createNewTaskButton" Click="issuesButton_Click" BorderThickness="0" FontSize="24">Create New Task</Button>
                    </StackPanel>
                </Grid>
                <Grid Column ="1">
                    <StackPanel Orientation="Vertical">
                        <Button x:Name="profileLogoutButton"
                                    HorizontalAlignment="Center"
								    Height="78"
								    Width="85"
								    Style="{StaticResource SkipBackAppBarButtonStyle}"
								    Click="profileLogoutButton_Click" Margin="15,0,14,0" />
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="2" Background="#FFFB4A07"/>
                <Grid Grid.Column="2" Grid.Row ="1" Background="#FFFB4A07"/>
            </Grid>
        </AppBar>
    </Grid>
</Page>
