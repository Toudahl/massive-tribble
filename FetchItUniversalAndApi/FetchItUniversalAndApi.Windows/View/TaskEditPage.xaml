<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:local="using:FetchItUniversalAndApi.View"
			xmlns:common="using:FetchItUniversalAndApi.Common"
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			xmlns:ViewModel="using:FetchItUniversalAndApi.ViewModel"
			x:Name="pageRoot"
			x:Class="FetchItUniversalAndApi.View.TaskEditPage"
			DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Mode=Self}}"
			mc:Ignorable="d">

	<!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Background="{StaticResource FetchitBackgroundColour}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="50" />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition Width="50" />
		</Grid.ColumnDefinitions>
		<Grid.ChildrenTransitions>
			<TransitionCollection>
				<EntranceThemeTransition />
			</TransitionCollection>
		</Grid.ChildrenTransitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="100*" />
			<RowDefinition Height="100*" />
			<RowDefinition Height="50" />
		</Grid.RowDefinitions>
		<Grid.DataContext>
			<ViewModel:TaskDetailViewModel />
		</Grid.DataContext>
		<TextBox x:Name="taskDescriptionBind"
						 Grid.Column="1"
						 HorizontalAlignment="Left"
						 Margin="125,79,0,0"
						 Grid.Row="1"
						 TextWrapping="Wrap"
						 Text="{Binding SelectedTask.TaskDescription, Mode=TwoWay}"
						 VerticalAlignment="Top"
						 FontSize="20"
						 Height="143"
						 Width="366" />
		<TextBlock x:Name="taskDescriptionBlock"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="125,55,0,0"
							 Grid.Row="1"
							 TextWrapping="Wrap"
							 VerticalAlignment="Top"
							 FontSize="20"
							 Text="Description" />
		<TextBlock x:Name="taskFeeBlock"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="125,152,0,0"
							 Grid.Row="2"
							 TextWrapping="Wrap"
							 Text="Task Fee"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="itemPriceBlock"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="125,95,0,0"
							 Grid.Row="2"
							 TextWrapping="Wrap"
							 Text="Task Item Price"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBlock x:Name="endAddressBlock"
							 Grid.Column="1"
							 HorizontalAlignment="Left"
							 Margin="125,209,0,0"
							 Grid.Row="2"
							 TextWrapping="Wrap"
							 Text="End Address"
							 VerticalAlignment="Top"
							 FontSize="20" />
		<TextBox x:Name="taskFeeBind"
						 Grid.Column="1"
						 HorizontalAlignment="Left"
						 Margin="299,138,0,0"
						 Grid.Row="2"
						 TextWrapping="Wrap"
						 Text="{Binding SelectedTask.TaskFee, Mode=TwoWay}"
						 VerticalAlignment="Top"
						 FontSize="20"
						 Height="38"
						 Width="192" />
		<TextBox x:Name="endAddressBind"
						 Grid.Column="1"
						 HorizontalAlignment="Left"
						 Margin="299,195,0,0"
						 Grid.Row="2"
						 TextWrapping="Wrap"
						 Text="{Binding SelectedTask.TaskEndPointAddress, Mode=TwoWay}"
						 VerticalAlignment="Top"
						 FontSize="20"
						 Height="38"
						 Width="192" />
		<TextBox x:Name="itemPriceBind"
						 Grid.Column="1"
						 HorizontalAlignment="Left"
						 Margin="299,81,0,0"
						 Grid.Row="2"
						 TextWrapping="Wrap"
						 Text="{Binding SelectedTask.TaskItemPrice, Mode=TwoWay}"
						 VerticalAlignment="Top"
						 FontSize="20"
						 Height="38"
						 Width="192" />
		<Button x:Name="goBackButton"
						Content="Go back"
						Grid.Column="1"
						HorizontalAlignment="Left"
						Margin="267,267,0,0"
						Grid.Row="2"
						VerticalAlignment="Top"
						Click="goBackButton_Click" />
		<Button x:Name="saveButton"
						Content="Save changes"
						Grid.Column="1"
						HorizontalAlignment="Left"
						Margin="122,267,0,0"
						Grid.Row="2"
						VerticalAlignment="Top"
						Command="{Binding SaveChangesCommand}" />
		<Button Content="Suspend Task"
						Grid.Column="1"
						HorizontalAlignment="Left"
						Margin="378,267,0,0"
						Grid.Row="2"
						VerticalAlignment="Top"
						Width="127"
						Command="{Binding SuspendTaskCommand}" />

	</Grid>
</Page>
