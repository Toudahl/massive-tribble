<Page x:Class="FetchItUniversalAndApi.View.LandingPage"
			xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:local="using:FetchItUniversalAndApi.View"
			xmlns:common="using:FetchItUniversalAndApi.Common"
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			xmlns:c="using:FetchItUniversalAndApi.Common"
			xmlns:viewModel="using:FetchItUniversalAndApi.ViewModel"
			mc:Ignorable="d">
    <Page.DataContext>
        <viewModel:LandingPageViewModel />
    </Page.DataContext>

    <Grid Background="{StaticResource FetchitBackgroundColour}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Grid -->
        <Grid Background="#FF0099CC">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="548"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="appBarButton" Margin="39,59,0,0"
                    Style="{StaticResource NavigationBackButtonNormalStyle}" 
                    RenderTransformOrigin="0.5,0.5" Height="41" Width="41" Click="appBarButton_Click">
                <Button.RenderTransform>
                    <CompositeTransform Rotation="180"/>
                </Button.RenderTransform>
            </Button>
            <TextBlock Text="Menu"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="46,0,46,20" Height="13" Width="28"/>

            <TextBlock x:Name="pageTitle" 
                        Text="{Binding WelcomeText}"
                        Style="{StaticResource HeaderTextBlockStyle}" 
                        Grid.Column="1" 
                        IsHitTestVisible="false" 
                        TextWrapping="NoWrap" 
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,40" Height="40"/>

            <TextBlock Text="FetchIt!" 
                       Grid.Column="2" 
                       FontSize="140"
                       TextWrapping="Wrap" 
                       VerticalAlignment="center" 
                       FontFamily="Remachine Script Personal Use " 
                       Foreground="#FFCCFFCC" Height="149" 
                       Margin="83,-7,294,-2"
                       Width="321"/>

        </Grid>

        <!--Grid definitions-->
        <Grid Row="1">
            <Grid.Background>
                <ImageBrush Stretch="Fill"/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            

            <!-- Notifications Listview-->
            <Grid Column="0">
                <TextBlock Text="Notifications"
                           FontSize="35"
                           Margin="15,0,130,0"
                           VerticalAlignment="Center"/>

                <Button x:Name="notificationsRefreshButton"
						Width="47"
						Height="47"
						HorizontalAlignment="Left"
						Style="{StaticResource FetchitButtonRefresh}"
						VerticalAlignment="Top"
						Command="{Binding RefreshNotifications}" 
                        Margin="250,7,0,0" />
            </Grid>
            <Grid Row="2">
                <ListView x:Name="notificationsListView"
						  ItemsSource="{Binding Notifications, Mode=TwoWay}"
						  SelectionChanged="notificationsListView_SelectionChanged">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding NotificationContent}"
															 FontSize="18"
															 TextWrapping="NoWrap"
															 Margin="10,0,0,0" />
                                <TextBlock Text="{Binding NotificationSent}"
															 FontSize="12"
															 TextWrapping="NoWrap"
															 Margin="10,0,0,0" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            
            <!-- My Tasks Listview-->
            <Grid Column="1">
                <TextBlock Text="My Tasks"
                           FontSize="35"
                           Margin="15,0,130,0"
                           VerticalAlignment="Center"/>
                <Button x:Name="activeTasksRefreshButton"
						Width="48"
						Height="48"
						Style="{StaticResource FetchitButtonRefresh}"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Command="{Binding RefreshMarketplace}"  
                        Margin="250,7,0,0"/>
            </Grid>
            <Grid Row="2"
                  Column="1">
                <ListView x:Name="userActiveTasksListView"
					  	  ItemsSource="{Binding ActiveTasks, Mode=TwoWay}"
						  SelectionChanged="userActiveTasksListView_SelectionChanged"
						  SelectedItem="{Binding th.SelectedTask, Mode=TwoWay}" />
            </Grid>

            
            <!--Marketplace-->
            <Grid Column="2">
                <TextBlock Text="Marketplace"
                           FontSize="35"
                           Margin="15,0,130,0"
                           VerticalAlignment="Center"/>
                <Button x:Name="refreshMarketplaceButton"
            		Style="{StaticResource FetchitButtonRefresh}"
            		Command="{Binding RefreshMarketplace}"
            		Click="refreshMarketplaceButton_Click"
            		Width="48"
            		Height="48" Margin="250,7,0,5" />
                <Button x:Name="CreateTaskButton"
            		Style="{StaticResource FetchitButtonAdd}"
            		Width="48"
            		Height="47"
            		Click="CreateTaskButton_Click" Margin="329,7,0,6"/>
            </Grid>
            <Grid Row ="2"
                  Column="4">
                <ListView x:Name="marketplaceListView"
                          ItemsSource="{Binding Marketplace}"
                          SelectionChanged="marketplaceListView_SelectionChanged">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding FK_TaskMaster}"
										   FontSize="18"
										   TextWrapping="NoWrap"
										   Margin="10,0,0,0"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding TaskDescription}"
															 FontSize="12"
															 TextWrapping="NoWrap"
															 Margin="10,0,0,0" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>
            
            <!--Appbar-->
            <AppBar x:Name="appBar" 
                    Grid.ColumnSpan="2"
                    Grid.RowSpan="2"
                    Background="NavajoWhite"
                    Opacity="20">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Menu"
                                   FontSize="50"
                                   Margin="15,0,130,0"
                                   VerticalAlignment="Center" 
                                   FontFamily="Remachine Script Personal Use " 
                                   Foreground="#FFFB4A07" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                    <Grid Row="1">
                        <StackPanel Orientation="Vertical">
                            
                        </StackPanel>
                    </Grid>
                    
                </Grid>
            </AppBar>
            
        </Grid>
    </Grid>
</Page>